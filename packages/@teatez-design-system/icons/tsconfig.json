{
	"extends": "tsconfig/react-library.json",
	"compilerOptions": {
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"noImplicitAny": false,
		"outDir": "./lib/typescript",
		"jsx": "react-native",
		"lib": ["ESNext", "ES2015"],
		"target": "ES6",
		"resolveJsonModule": true,
		"skipLibCheck": true
	},
	"include": ["**/*.ts", "**/*.tsx"],
	"exclude": ["dist", "build", "node_modules"]
}
